<Window x:Class="Tic_Tac_Toe_WPF.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window2" Height="700" Width="1000">
    <Grid Margin="0,4,0,-4" Background="#080706">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="#2C4A52">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock FontSize="20" Margin="10 10 0 0" FontFamily="Georgia">Player--1</TextBlock>
                    <StackPanel Margin="0 20 0 0 " Orientation="Horizontal">
                        <TextBlock FontFamily="Georgia" Margin="20">Player Id</TextBlock>
                        <Label x:Name="idlabel" FontSize="15" Background="#F1F3CE" Width="50" Height="30"></Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Georgia" Margin="20">Player Name</TextBlock>
                        <Label x:Name="namelabel" FontSize="15" Background="#F1F3CE" Width="150" Height="30"></Label>
                    </StackPanel>

                    <Button x:Name="addplayerbuttion" Margin="20 20 0 0"  Click="Button_Click_1" FontFamily="Georgia" Height="30" Width="300">Add Player</Button>
                </StackPanel>
                <StackPanel x:Name="Player2profile"  Grid.Column="1">
                    <TextBlock FontSize="20" Margin="10 10 0 0" FontFamily="Georgia">Player--2</TextBlock>
                    <StackPanel Margin="0 20 0 0 " Orientation="Horizontal">
                        <TextBlock FontFamily="Georgia" Margin="20">Player Id</TextBlock>
                        <Label x:Name="idlabel2" FontSize="15" Background="#F1F3CE" Width="50" Height="30"></Label>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Georgia" Margin="20">Player Name</TextBlock>
                        <Label x:Name="namelabel2" FontSize="15" Background="#F1F3CE" Width="150" Height="30"></Label>
                    </StackPanel>
                    </StackPanel>
            </Grid>
        
            
