       <Border Margin="20" Grid.Row="1" Background="#8E9B97">
            <Button BorderBrush="#F4EBDB" BorderThickness="5" Click="Button_Click_5"  Background="#2C4A52" Margin="250 40 250 40">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="17"/>
                    </Style>
                </Button.Resources>
                <TextBlock FontSize="30" FontFamily="Georgia"  FontStyle="Italic" FontWeight="Bold">Start Game</TextBlock>
                
            </Button>
        </Border>
        <Border Margin="20" Grid.Row="2" Background="#8E9B97">
            <Button BorderBrush="#F4EBDB" BorderThickness="5" Click="Button_Click_6"  Background="#2C4A52" Margin="250 40 250 40">
